<div class="max-w-4xl mx-auto px-4 py-8">
  <% unless @credential_warnings.empty? %>
    <div id="error_explanation" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-2">
      <h2 class="font-bold"> Warnings: </h2>
      <ul>
        <% @credential_warnings.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <h1 class="text-2xl font-bold mb-4">Municipes CRUD</h1>
  <h3 class="text-1xl font-bold mb-4">Filters</h3>
  <%= form_tag municipes_path, method: :get do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search by \"nome\"", class: "shadow appearance-none border rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    <%= text_field_tag :cidade, params[:cidade], placeholder: "Search by \"cidade\"", class: "shadow appearance-none border rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    <%= text_field_tag :uf, params[:uf], placeholder: "Search by \"uf\"", class: "shadow appearance-none border rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    <%= submit_tag "Search", class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 my-2 rounded focus:outline-none focus:shadow-outline' %>
  <% end %>
  <% @municipes.each do |municipe| %>
    <div class="bg-white shadow-md rounded-md p-4 mb-4">
      <h2 class="text-xl font-bold mb-2"><%= municipe.nome_completo %></h2>
      <p class="text-gray-700 mb-2">CPF: <%= municipe.cpf %></p>
      <p class="text-gray-700 mb-2">Status: <%= municipe.status ? 'Ativo' : 'Inativo' %></p>
      <%= link_to 'Show', municipe, class: 'text-blue-500 hover:text-blue-700 mr-4' %>
      <%= link_to 'Edit', edit_municipe_path(municipe), class: 'text-green-500 hover:text-green-700 mr-4' %>
    </div>
  <% end %>
  <%= link_to 'New Municipe', new_municipe_path, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
</div>