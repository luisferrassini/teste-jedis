<div class="max-w-4xl mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-4"><%= @municipe.nome_completo %></h1>
  <div class="bg-white shadow-md rounded-md p-4 mb-4">
    <p class="text-gray-700 mb-2"><strong>CPF:</strong> <%= @municipe.cpf %></p>
    <p class="text-gray-700 mb-2"><strong>CNS:</strong> <%= @municipe.cns %></p>
    <p class="text-gray-700 mb-2"><strong>Email:</strong> <%= @municipe.email %></p>
    <p class="text-gray-700 mb-2"><strong>Data de Nascimento:</strong> <%= @municipe.data_nascimento.strftime("%d/%m/%Y") %></p>
    <p class="text-gray-700 mb-2"><strong>Telefone:</strong> <%= @municipe.telefone %></p>
    <p class="text-gray-700 mb-2"><strong>Status:</strong> <%= @municipe.status ? 'Ativo' : 'Inativo' %></p>
    <% if @municipe.endereco.present? %>
      <h2 class="text-lg font-semibold mb-2">Endereço:</h2>
      <p class="text-gray-700 mb-2"><strong>CEP:</strong> <%= @municipe.endereco.cep %></p>
      <p class="text-gray-700 mb-2"><strong>Logradouro:</strong> <%= @municipe.endereco.logradouro %></p>
      <p class="text-gray-700 mb-2"><strong>Complemento:</strong> <%= @municipe.endereco.complemento %></p>
      <p class="text-gray-700 mb-2"><strong>Bairro:</strong> <%= @municipe.endereco.bairro %></p>
      <p class="text-gray-700 mb-2"><strong>Cidade:</strong> <%= @municipe.endereco.cidade %></p>
      <p class="text-gray-700 mb-2"><strong>UF:</strong> <%= @municipe.endereco.uf %></p>
      <p class="text-gray-700 mb-2"><strong>Código IBGE:</strong> <%= @municipe.endereco.codigo_ibge %></p>
    <% else %>
      <p class="text-red-600">Endereço não encontrado.</p>
    <% end %>
  </div>
  <%= link_to 'Edit', edit_municipe_path(@municipe), class: 'bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded mr-4 focus:outline-none focus:shadow-outline' %>
  <%= link_to 'Back', municipes_path, class: 'bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
</div>
